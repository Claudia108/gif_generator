<h2>Favorite Your Gifs</h2>

<%= form_for @favorites do |f| %>
  <% @categories.each do |category| %>
    <h3><%= category.name %></h3>
    <% category.gifs.each.with_index do |gif, index| %>
        <input type="checkbox" name="<%= "#{category.name}#{index + 1}" %>" value="<%= gif.image_path %>">
        <img src="<%= gif.image_path %>">
        <% if (index + 1)%4 == 0 %><br><% end %>
    <% end %>
  <% end %>
  <%= f.submit "Favorite Gifs" %>
<% end %>
